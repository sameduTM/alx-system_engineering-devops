#!/usr/bin/env bash
# Configure your Nginx server so that /redirect_me is redirecting to another page.

sudo apt update

# install nginx
sudo apt -y install nginx

# enable nginx
sudo ufw allow 'Nginx HTTP'

# add a redirect_me page
sudo mkdir -p /var/www/redirect_me/html

echo "server {
        listen 80;

        location / {
                return 200 'Hello World!';
        }
}" | sudo tee /etc/nginx/sites-enabled/default

# Using awk to replace multiline text
sudo awk '
    /location \// { p = 1 }
    p && /}/ {
        print "        location / {"
        print "                return 200 '\''Hello World!'\'';"
        print "        }"
        print "        location /redirect_me {"
        print "                return 301 https://youtube.com;"
        print "        }"
        p = 0; next
    }
    !p
' /etc/nginx/sites-enabled/default > temp && sudo mv temp /etc/nginx/sites-enabled/default

# replace string
sudo sed -i 's/$string_to_replace/$new_string/g' /etc/nginx/sites-enabled/default

# check error in nginx file
sudo nginx -t

# restart nginx
sudo service nginx restart